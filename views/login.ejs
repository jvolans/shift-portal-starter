<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8">
  <title>Přihlášení – Směny</title>
  <link rel="stylesheet" href="/style.css">
</head><body>
  <div class="container">
    <h1>Směny – přihlášení</h1>
    <% if (error) { %><div class="alert"><%= error %></div><% } %>
    <form method="post" action="/login">
      <label>Osobní číslo</label>
      <input type="text" name="personal_number" required autofocus>
      <label>Heslo</label>
      <input type="password" name="password" required>
      <button type="submit">Přihlásit</button>
    </form>
  </div>
</body></html>
