<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin – Směny</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head><body>
  <%- include('partials/topbar') %>

  <div class="container container-narrow py-4">
    <% if (message) { %><div class="alert alert-success"><%= message %></div><% } %>
    <% if (error)   { %><div class="alert alert-danger"><%= error %></div><% } %>

    <div class="row g-4">
      <!-- Přidat uživatele -->
      <div class="col-12 col-lg-6">
        <div class="card p-3 h-100">
          <h2 class="h5">Přidat uživatele</h2>
          <form method="post" action="/admin/add-user" class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Osobní číslo</label>
              <input class="form-control" name="personal_number" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Jméno a příjmení</label>
              <input class="form-control" name="full_name" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Telefon</label>
              <input class="form-control" name="phone">
            </div>
            <div class="col-md-6">
              <label class="form-label">E-mail</label>
              <input class="form-control" name="email">
            </div>
            <div class="col-md-12">
              <label class="form-label">Heslo (prázdné = osobní číslo)</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="col-12">
              <button class="btn btn-primary">Uložit</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Import směn -->
      <div class="col-12 col-lg-6">
        <div class="card p-3 h-100">
          <h2 class="h5">Import směn (CSV)</h2>
          <p class="text-muted small mb-2">
            CSV hlavičky: <code>PersonalNumber,Date,Start,End,WorkCenter,Notes</code>
          </p>
          <form method="post" action="/admin/import-shifts" enctype="multipart/form-data" class="d-flex gap-2">
            <input type="file" class="form-control" name="csvfile" accept=".csv" required>
            <button class="btn btn-outline-primary">Nahrát</button>
          </form>
        </div>
      </div>

      <!-- Seznam uživatelů -->
      <div class="col-12">
        <div class="card p-3">
          <h2 class="h5">Uživatelé</h2>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-light">
                <tr>
                  <th>Osobní číslo</th>
                  <th>Jméno</th>
                  <th>Telefon</th>
                  <th>E-mail</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(u => { %>
                  <tr>
                    <td><%= u.personal_number %></td>
                    <td><%= u.full_name %></td>
                    <td><%= u.phone || '' %></td>
                    <td><%= u.email || '' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <a class="link-secondary" href="/me/shifts">← Zpět na moje směny</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
