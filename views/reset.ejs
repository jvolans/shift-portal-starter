<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8"><title>Nastavit nové heslo</title>
  <link rel="stylesheet" href="/style.css">
</head><body>
  <div class="topbar">
    <strong>Směny</strong>
    <div class="spacer"></div>
    <a href="/login">← Zpět na přihlášení</a>
  </div>

  <div class="container">
    <h1>Nastavit nové heslo</h1>
    <% if (message) { %><div class="notice"><%= message %></div><% } %>
    <% if (error)   { %><div class="alert"><%= error %></div><% } %>
    <% if (token) { %>
      <form method="post" class="card">
        <label>Nové heslo</label><input type="password" name="new_password" required>
        <button type="submit">Uložit</button>
      </form>
    <% } else { %>
      <p><a href="/login">Pokračovat na přihlášení</a></p>
    <% } %>
  </div>
</body></html>
