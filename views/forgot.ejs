<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Zapomenuté heslo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head><body>
  <%- include('partials/topbar') %>
  <div class="container container-narrow py-4">
    <div class="card p-4">
      <h1 class="h5 mb-3">Zapomenuté heslo</h1>
      <% if (message) { %><div class="alert alert-info"><%= message %></div><% } %>
      <% if (error)   { %><div class="alert alert-danger"><%= error %></div><% } %>
      <form method="post" class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Osobní číslo</label>
          <input class="form-control" name="personal_number" placeholder="49563">
        </div>
        <div class="col-md-6">
          <label class="form-label">E-mail (alternativa)</label>
          <input class="form-control" name="email" placeholder="jan@example.com">
        </div>
        <div class="col-12">
          <button class="btn btn-primary">Poslat odkaz</button>
        </div>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
