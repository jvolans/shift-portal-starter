<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Můj profil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head><body>
  <%- include('partials/topbar') %>
  <div class="container container-narrow py-4">
    <div class="row g-4">
      <div class="col-12">
        <% if (message) { %><div class="alert alert-success"><%= message %></div><% } %>
        <% if (error)   { %><div class="alert alert-danger"><%= error %></div><% } %>
      </div>

      <div class="col-12 col-lg-6">
        <div class="card p-3">
          <h2 class="h5">Profil</h2>
          <p class="mb-1"><strong>Osobní číslo:</strong> <%= user.personal_number %></p>
          <p class="mb-1"><strong>Jméno:</strong> <%= user.full_name %></p>
        </div>
      </div>

      <div class="col-12 col-lg-6">
        <div class="card p-3">
          <h2 class="h5">Kontakt</h2>
          <form method="post" class="form-grid">
            <div><label class="form-label">Telefon</label>
              <input class="form-control" name="phone" value="<%= user.phone || '' %>">
            </div>
            <div><label class="form-label">E-mail</label>
              <input class="form-control" name="email" value="<%= user.email || '' %>">
            </div>
            <button class="btn btn-primary">Uložit</button>
          </form>
        </div>
      </div>

      <div class="col-12">
        <div class="card p-3">
          <h2 class="h5">Změna hesla</h2>
          <form method="post" action="/profile/change-password" class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Aktuální heslo</label>
              <input type="password" class="form-control" name="current_password" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Nové heslo</label>
              <input type="password" class="form-control" name="new_password" required>
            </div>
            <div class="col-md-4 align-self-end">
              <button class="btn btn-outline-primary">Změnit heslo</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
