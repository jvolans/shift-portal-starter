<!doctype html>
<html lang="cs"><head>
  <meta charset="utf-8"><title>Můj profil</title>
  <link rel="stylesheet" href="/style.css">
</head><body>
  <div class="topbar">
    <div>👤 Můj profil</div>
    <div class="actions">
      <a href="/me/shifts">← Moje směny</a>
      <form method="post" action="/logout"><button type="submit">Odhlásit</button></form>
    </div>
  </div>
  <div class="container">
    <% if (message) { %><div class="notice"><%= message %></div><% } %>
    <% if (error)   { %><div class="alert"><%= error %></div><% } %>

    <p><strong>Osobní číslo:</strong> <%= user.personal_number %></p>
    <p><strong>Jméno:</strong> <%= user.full_name %></p>

    <h2>Kontakt</h2>
    <form method="post" class="card">
      <label>Telefon (pro SMS)</label><input name="phone" value="<%= user.phone || '' %>">
      <label>E-mail (pro upozornění / reset hesla)</label><input name="email" value="<%= user.email || '' %>">
      <button type="submit">Uložit</button>
    </form>

    <h2>Změna hesla</h2>
    <form method="post" action="/profile/change-password" class="card">
      <label>Aktuální heslo</label><input type="password" name="current_password" required>
      <label>Nové heslo</label><input type="password" name="new_password" required>
      <button type="submit">Změnit heslo</button>
    </form>
  </div>
</body></html>
